---
import MainLayout from "../layouts/MainLayout.astro";
import Pris from '../components/Pris.astro';
import Button from '../components/Button.astro';
import HoverPic from '../components/HoverPic.astro';
import { Image } from 'astro:assets';
import hairdryer from "../assets/images/hairdryer.svg";
---
<MainLayout title="Priser">
	<section class="mx-10 lg:mx-20">
		<div class="flex items-center mt-10 lg:mt-20 mb-6 lg:mb-24">
			<div class="flex-grow border-t border-brun-900 min-w-6"></div>
			<h1 class="text-4xl lg:text-6xl uppercase font-bold font-outfit px-[8px] lg:px-[30px]">Priser</h1>
			<div class="flex-grow border-t border-brun-900 min-w-6"></div>
		</div>
		<div class="lg:grid lg:grid-cols-2 lg:gap-36">
			<div class="lg:flex lg:flex-col lg:gap-10 lg:items-stretch">
				<div class="mb-12 lg:mb-0 order-1">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">Klip</h2>
					<Pris service="Dameklip m. vask/føn" pris="730 kr.">
					</Pris>
					<Pris service="Herreklip m. vask/føn" pris="630 kr.">
					</Pris>
					<Pris service="Juniorklip 6-12 år" pris="490 kr.">
					</Pris>
					<Pris service="Børneklip 0-5 år" pris="390 kr.">
					</Pris>
				</div>
				<div class="mb-12 lg:mb-0">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">Striber</h2>
					<Pris service="Striber i top/reperation" pris="Fra 800 kr.">
					</Pris>
					<Pris service="Striber i hele håret" pris="Fra 1.400 kr.">
					</Pris>
				</div>
				<div class="mb-12 lg:mb-0">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">STRIBER MED KLIP</h2>
					<Pris service="Striber i top/reparation inkl. klip" pris="Fra 1.530 kr.">
					</Pris>
					<Pris service="Striber hele håret inkl. klip" pris="Fra 2.130 kr.">
					</Pris>
				</div>
				<!-- mobil rækkefølge -->
				<div class="mb-12 lg:mb-0 lg:hidden">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">HELFARVE</h2>
					<Pris service="Helfarve i bund" pris="Fra 750 kr.">
					</Pris>
					<Pris service="Helfarve ud i længder" pris="Fra 900 kr">
					</Pris>
				</div>
				<div class="mb-12 lg:mb-0 lg:hidden">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">HELFARVE MED KLIP</h2>
					<Pris service="Helfarve i bund inkl. klip" pris="Fra 1.480 kr.">
					</Pris>
					<Pris service="Helfarve ud i længder inkl. klip" pris="Fra 1.630 kr.">
					</Pris>
				</div>
				<div class="mb-12 lg:mb-0">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">BRYN & VIPPER</h2>
					<Pris service="Bryn og vipper" pris="320 kr.">
					</Pris>
					<Pris service="Bryn m. farve" pris="130 kr.">
					</Pris>
					<Pris service="Vipper" pris="190 kr.">
					</Pris>
				</div>
			</div>
			<div class="lg:flex lg:flex-col lg:gap-10 lg:items-stretch">
				<div class="mb-12 lg:mb-0 hidden lg:block">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">HELFARVE</h2>
					<Pris service="Helfarve i bund" pris="Fra 750 kr.">
					</Pris>
					<Pris service="Helfarve ud i længder" pris="Fra 900 kr">
					</Pris>
				</div>
				<div class="mb-12 lg:mb-0 hidden lg:block">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">HELFARVE MED KLIP</h2>
					<Pris service="Helfarve i bund inkl. klip" pris="Fra 1.480 kr.">
					</Pris>
					<Pris service="Helfarve ud i længder inkl. klip" pris="Fra 1.630 kr.">
					</Pris>
				</div>
				<div class="mb-12 lg:mb-0">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">HÅRKUR</h2>
					<Pris service="Hårkur" pris="Fra 250 kr.">
					</Pris>
				</div>
				<div class="mb-12 lg:mb-0">
					<h2 class="text-2xl font-outfit uppercase font-bold pb-7">OPSÆTNING & FØN</h2>
					<Pris service="Vask og føn" pris="450 kr.">
					</Pris>
					<Pris service="Håropsætninger" pris="Kontakt salonen">
					</Pris>
				</div>
				<div class="mb-12 lg:mb-6">
					<div class="lg:flex lg:items-center lg:justify-between">
						<div class="flex justify-center flip-vertical mb-6 lg:order-2">
							<Image class="rotation" src={hairdryer} alt="Animeret illustration af en føntørrer" loading="lazy"/>
						</div>
						<div class="flex justify-center mb-6 lg:order-1 lg:h-fit">
							<Button variant="lb">
								<a href="https://salonbook.one/?casa17#/" target="_blank">Book tid</a>
							</Button>
						</div>
					</div>
					<p class="break-words text-sm">OBS Vores farvebehandlinger er fra priser, da der kan komme tillæg på ved ekstra langt/tykt hår. Derudover tages der forbehold for prisstigninger og tastefejl.</p>
				</div>
			</div>
		</div>
	</section>
	<section class="mx-10 lg:mx-20">
		<div class="flex items-center mt-10 lg:mt-20 mb-6 lg:mb-24">
			<div class="flex-grow border-t border-brun-900 min-w-6"></div>
			<h1 class="text-4xl lg:text-6xl uppercase font-bold font-outfit px-[8px] lg:px-[30px]">Brands</h1>
			<div class="flex-grow border-t border-brun-900 min-w-6"></div>
		</div>
		<div>
			<div class="mx-10 lg:mx-20 mb-20">
			  <div class="flex items-center flex-col lg:flex-row gap-10">
				<HoverPic
					image="../img/brand_evo1.jpg"
					imagealt="Billede der viser tre forskellige produkter fra EVO. Indpakningerne er hvid med blå eller pink skrift"
					titel="EVO"
					navn="Fugtgivende serie"
					beskrivelse="Produkter der giver fugt og reparerer"
				/>
				<HoverPic
					image="../img/brand_icon.jpg"
					imagealt="Billedet viser fem forskellige produkter fra serien ICON. Fire af produkterne har hvid indpakning og har enten lyserød eller orange skrift. Det sidste produkt er en brun flaske med orange skrift."
					titel="I.C.O.N"
					navn="Hårpleje"
					beskrivelse="Et udvalg af produkter der plejer håret"
				/>
				<HoverPic
					image="../img/brand_evo2.jpg"
					imagealt="Billedet viser tre forskellige produkter fra EVO. De har alle hvid indpakning og skriften på dem er lys brun"
					titel="EVO"
					navn="Styling af hår"
					beskrivelse="Style dit hår med disse produkter"
				/>
			  </div>
			  <div class="mt-2">
				<p>
				  <span class="font-bold uppercase text-brun-900 leading-relaxed">
					Obs
				  </span>
				  Viste produkter kan kun købes i salonen, og ikke online
				</p>
			  </div>
			</div>
		</div>
	</section>
</MainLayout>

<style>
	.rotation {
	  animation-name: rotation_kf;
	  animation-duration: 2s;
	  animation-iteration-count: infinite;
	  animation-timing-function: linear;
	}
  
	@keyframes rotation_kf {
	  0% {
		transform: rotate(0deg);
	  }
	  50% {
		transform: rotate(-15deg);
	  }
	  100% {
		transform: rotate(0deg);
	  }
	}

	.flip-vertical {
  		transform: scaleX(-1);
	}	
  </style>
  