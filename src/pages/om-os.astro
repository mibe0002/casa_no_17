---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import facade from "../assets/images/facade.jpg";
import Aabningstider from "../components/Aabningstider.astro";
import HoverPic from "../components/HoverPic.astro";
import hairdryer from "../assets/images/hairdryer.svg";
import brush from "../assets/images/brush.svg";
import scissor from "../assets/images/scissor.svg";
import comb from "../assets/images/comb.svg";
import sofa from "../assets/images/sofa.png";
import camilla from "../assets/images/camilla.jpg";
