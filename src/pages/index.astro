@media only screen and (max-width: 768px) {

.logo-banner {
        justify-content: flex-start;
      }

      .logo-track {
        animation: scrollLeft 10s linear infinite;
        width: max-content;
      }

      @keyframes scrollLeft {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(-50%);
        }
      }
.GoogleCards {
    display: flex;
    overflow-x: auto; /* Only horizontal scrolling */
    scroll-snap-type: x mandatory;
    padding-left: 36px;
    padding-right: 36px;
    gap: 20px;
    scroll-padding: 10px;
  }


  /* Custom Scrollbar */
  .GoogleCards::-webkit-scrollbar {
    width: auto;
    height: 10px;
  }
  .GoogleCards::-webkit-scrollbar-track {
    background: #ECE3DF;
  }
  .GoogleCards::-webkit-scrollbar-thumb {
    background-color: #443028; /* Scrollbar thumb color */
    border-radius: 2px;
  }
  .GoogleCards::-webkit-scrollbar-thumb:hover {
    background-color: #443028; /* Thumb color on hover */
  }
