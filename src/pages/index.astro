        }
        100% {
          transform: translateX(-50%);
        }
      }
.GoogleCards {
    display: flex;
    overflow-x: auto; /* Only horizontal scrolling */
    scroll-snap-type: x mandatory;
    padding-left: 36px;
    padding-right: 36px;
    gap: 20px;
    scroll-padding: 10px;

    /* Remove these to show the scrollbar */
    /* scrollbar-width: none; */
    /* -ms-overflow-style: none; */
    
    /* Optional: show custom scrollbar in Firefox */
    scrollbar-color: #443028 transparent;
  }

  .GoogleCards::-webkit-scrollbar {
    display: block; /* Show scrollbar in WebKit browsers */
    height: 8px; /* Optional: customize scrollbar height */
  }

  .GoogleCards::-webkit-scrollbar-thumb {
    background-color: #443028; /* Optional: scrollbar thumb color */
    border-radius: 4px;
  }

  .GoogleCards .card {
    flex: 0 0 100%;
    scroll-snap-align: start;
    scroll-snap-stop: always;
  }

