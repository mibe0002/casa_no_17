---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import instagram from "../assets/images/ig.svg";
import facebook from "../assets/images/fb.svg";
import HoverGallery from "../components/HoverGallery.astro";
---

<MainLayout title="Galleri">
  <div class="flex items-center mb-10 mt-10 lg:mt-20 mx-20">
    <div class="flex-grow border-t border-brun-900"></div>
    <span
      class="px-4 text-4xl text-brun-900 font-bold text-center uppercase lg:text-6xl"
      ><h1>Galleri</h1></span
    >
    <div class="flex-grow border-t border-brun-900"></div>
  </div>
  <section class="flex items-start gap-6 flex-wrap mx-10 mb-10 lg:mx-20">
    <div class="flex items-center gap-4 min-w-[3rem]">
      <a
        href="https://www.instagram.com/casa_no_17/"
        target="_blank"
        class="transition-transform duration-200 active:scale-105 hover:scale-105"
      >
        <Image
          src={instagram}
          alt="Beige Instagram ikon der fører videre til Instagram"
          loading="lazy"
          class="w-12 h-12"
        />
      </a>

      <a
        href="https://www.facebook.com/groups/164095825399/"
        target="_blank"
        class="transition-transform duration-200 active:scale-105 hover:scale-105"
      >
        <Image
          src={facebook}
          alt="Beige Facebook ikon som sender videre til Facebook"
          loading="lazy"
          class="w-12 h-12"
        />
      </a>
    </div>

    <div>
      <p class="max-w-prose leading-relaxed">
        Få et glimt af hverdagen i salonen, bliv inspireret af smukke hårstile
        og vær den første til at få nyheder, tips og eksklusive tilbud.
      </p>
    </div>
  </section>

