---
import "../styles/tailwind.css";
---

<div class="flex justify-center items-center px-6 py-20">
    <div class="grid lg:grid-cols-[1fr_3fr] w-full max-w-5xl gap-20">
      <!-- Venstre: Titel -->
      <div class="flex items-center justify-center">
        <h2 class="text-brun-900 text-6xl font-bold leading-tight text-center">
          ÅBENT I<br />SALONEN
        </h2>
      </div>

      <!-- Højre: Tabel -->
      <div class="w-full">
        <div class="grid grid-cols-2">
          <!-- Rækker -->
            <div class="border-b border-brun-900 py-3">
                <p class="text-brun-900 text-3xl">Mandag</p>
            </div>
            <div class="border-b border-brun-900 py-3 text-right">
                <p class="text-brun-900 text-3xl">Lukket</p>
            </div>

            <div class="border-b border-brun-900 py-3">
                <p class="text-brun-900 text-3xl">Tirsdag</p>
            </div>
            <div class="border-b border-brun-900 py-3 text-right">
                <p class="text-brun-900 text-3xl">10.00 – 18.00</p>
            </div>

            <div class="border-b border-brun-900 py-3">
                <p class="text-brun-900 text-3xl">Onsdag</p>
            </div>
            <div class="border-b border-brun-900 py-3 text-right">
                <p class="text-brun-900 text-3xl">10.00 – 18.00</p>
            </div>

            <div class="border-b border-brun-900 py-3">
                <p class="text-brun-900 text-3xl">Torsdag</p>
            </div>
            <div class="border-b border-brun-900 py-3 text-right">
                <p class="text-brun-900 text-3xl">10.00 – 19.00</p>
            </div>

            <div class="border-b border-brun-900 py-3">
                <p class="text-brun-900 text-3xl">Fredag</p>
            </div>
            <div class="border-b border-brun-900 py-3 text-right">
                <p class="text-brun-900 text-3xl">10.00 – 18.00</p>
            </div>

            <div class="border-b border-brun-900 py-3">
                <p class="text-brun-900 text-3xl">Lørdag</p>
            </div>
            <div class="border-b border-brun-900 py-3 text-right">
                <p class="text-brun-900 text-3xl">09.00 – 13.00</p>
            </div>

            <div class="border-b border-brun-900 py-3">
                <p class="text-brun-900 text-3xl">Søndag</p>
            </div>
            <div class="border-b border-brun-900 py-3 text-right">
                <p class="text-brun-900 text-3xl">Lukket</p>
            </div>
            
        </div>
      </div>
    </div>
  </div>