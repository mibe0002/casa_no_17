---
// Henter parametrene fra Astro.props
const { href="#", target="_self", variant="menu-small", size="small"} = Astro.props;

//Alle knapper
const linkStyling = "transition-colors duration-500 no-underline font-outfit text-brun-25"; 

// text-Colors-Brown-25 text-2xl font-bold  uppercase"

//Forskellige knapper (farver o.lign.)
const variantClasses = {
// "textlink":"hover:underline",
// "other setting": "bg-pink-200 hover:bg-pink-100 hover:text-grey-700 rounded-full",
"menu-small": "font-bold uppercase",
"menu-large": "font-bold uppercase text-brun-900 no-underline inline-block py-[10px] px-[20px] relative after:content-[''] after:absolute after:bottom-0 after:left-1/2 after:h-[2px] after:w-0 after:bg-brun-800 after:transition-[width,left] after:duration-300 hover:after:w-full hover:after:left-0",
// Animation fra: https://tailwindflex.com/@cagarcia2011/underline-hover-effect af Carlos Adrian Garcia
};

//Forskellige størrelser
const sizeClasses = {
// "medium": "px-10 py-4 text-base",
"small": "text-2xl",
"medium": "text-base",
"large": "text-d-h4 py-m-xs",
};
---

<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<a href={href} target={target} class:list={[linkStyling, variantClasses[variant],
sizeClasses[size]]}><slot /></a>