---
import Link from './Link.astro';
import { Image } from 'astro:assets';
import logo_light from '../assets/images/logo_light.svg';
import instagram from '../assets/images/instagram.svg';
import facebook from '../assets/images/facebook.svg';
---
<div class="w-full"></div>
    <iframe
        title="Google Maps placering af Frisør Casa No. 17"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4498.249644016717!2d12.556216776403023!3d55.68681759707215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46525307704b2903%3A0x163b088ee6871324!2sCasa%20No.%2017!5e0!3m2!1sen!2sdk!4v1746611081789!5m2!1sen!2sdk"
        class="w-full h-[224px] border-0"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
    </iframe>
</div>
<div class="px-10 py-8 grid grid-cols-[160px_auto] grid-rows-2">
    <div>
        <h4 class="text-brun-25 text-base font-bold font-outfit uppercase pb-6">CASA NO. 17</h4>
        <ul class="flex flex-col gap-2">
            <li><Link href="/priser" variant="menu-footer", size="footer">Priser</Link></li>
            <li><Link href="/om-os" variant="menu-footer", size="footer">Om os</Link></li>
            <li><Link href="/galleri" variant="menu-footer", size="footer">Galleri</Link></li>
            <li><Link href="https://salonbook.one/?casa17#/" target="_blank" variant="menu-footer", size="footer">Book tid</Link></li>
        </ul>
    </div>
    <div>
        <h4 class="text-brun-25 text-base font-bold font-outfit uppercase pb-6">Kontakt</h4>
        <address class="text-brun-25 not-italic text-base font-agrandir flex flex-col gap-3.5">
            <div>
                <p>Blågårdsgade 17</p>
                <p>2200 København N</p>
            </div>
            <p>Tlf. <a href="tel:+4535350080">3535 0080</a></p>
            <p><a href="mailto:Vedstedcamilla@gmail.com" class="break-words">Vedstedcamilla@gmail.com</a></p>
        </address>
        <div class="flex gap-8 pt-5">
            <Image src={instagram} alt="Instagram ikon" loading="lazy"></Image>
            <Image src={facebook} alt="Facebook ikon" loading="lazy"></Image>
        </div>
    </div>
    <div>
        <h4 class="text-brun-25 text-base font-bold font-outfit uppercase pb-6">Åbningstider</h4>
        <ul class="flex flex-col gap-2">
            <li class="flex items-center gap-1 text-brun-25 text-sm font-agrandir"><span class="w-14">Mandag:</span><span>lukket</span></li>
            <li class="flex items-center gap-1 text-brun-25 text-sm font-agrandir"><span class="w-14">Tirsdag:</span><span>10.00 - 18.00</span></li>
            <li class="flex items-center gap-1 text-brun-25 text-sm font-agrandir"><span class="w-14">Onsdag:</span><span>10.00 - 18.00</span></li>
            <li class="flex items-center gap-1 text-brun-25 text-sm font-agrandir"><span class="w-14">Torsdag:</span><span>10.00 - 18.00</span></li>
            <li class="flex items-center gap-1 text-brun-25 text-sm font-agrandir"><span class="w-14">Fredag:</span><span>10.00 - 19.00</span></li>
            <li class="flex items-center gap-1 text-brun-25 text-sm font-agrandir"><span class="w-14">Lørdag:</span><span>9.00 - 13.00</spa></li>
            <li class="flex items-center gap-1 text-brun-25 text-sm font-agrandir"><span class="w-14">Søndag:</span><span>lukket</span></li>
        </ul>
    </div>
    <div class="flex flex-col justify-end gap-8">
        <Image src={logo_light} alt="Casa No 17s logo lys version" loading="lazy"></Image>
        <p class="text-brun-25 text-sm font-agrandir">© 2025 Frisør Casa No. 17.<br>Alle rettigheder forbeholdes.</p>
    </div>
</div>



